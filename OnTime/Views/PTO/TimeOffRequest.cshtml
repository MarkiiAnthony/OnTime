@model OnTime.Models.PTORequests
<div class="register-form mt-3 mb-3">
    <div class="container">
        <div class="row">

            <div class="col-md-6" style="background-color: #1d1919; opacity:0.5;">

                <form id="account" method="post" asp-action="SubmitPTO" asp-controller="PTO" class="login-form">

                    <div class="form-group">

                        <label>Paid Time Off Type:</label>
                        <select asp-for="PtoType" class="form-select" aria-label="Paid Time Off Select">
                            <option selected>Open this select menu</option>
                            <option value="SickHours">Sick Hours</option>
                            <option value="VacationHours">Vacation Hours</option>
                            <option value="PersonalDay">Personal</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="PtoRequestedHours">Hours Needed:</label>
                        <input asp-for="HoursRequested" type="number" value="1.5" data-decimals="2" min="0" max="9" step="0.1" />
                    </div>
                    <div class="form-group">
                        <label for="PtoStart">PTO Start Date:</label>
                        <input asp-for="PtoStartDate" type="date" id="PtoStart" name="PtoStart">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn form-control btn-primary rounded submit px-3">Submit Request</button>
                        <br />
                        <button asp-controller="PTO" asp-action="TimeOffRequest" class="btn form-control btn-primary rounded submit px-3">Back</button>
                    </div>

                </form>



            </div>
        </div>
    </div>
</div>