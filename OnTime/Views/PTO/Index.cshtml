

<div class="register-form mt-3 mb-3">
    <div class="container">
        <div class="row">

            <div class="col-md-6" style="background-color: #1d1919; opacity:0.5;">
                
                <form id="ptoview"  class="login-form">
                    
                    <div class="form-group">
                     
                        <label>Paid Time Off (Hours):</label>
                        <input class="form-control" type="text" placeholder=@ViewData["PTOData"] readonly>
                    </div>
                    <div class="form-group">
                        <label>Upcoming Paid Time Off:</label>
                        <input class="form-control" type="text" placeholder="Readonly input here…" readonly>
                    </div>
                    
                    <div class="form-group">
                        <button asp-controller="PTO" asp-action="TimeOffRequest" class="btn form-control btn-primary rounded submit px-3">Request PTO</button>
                    </div>

                </form>



            </div>
        </div>
    </div>
</div>