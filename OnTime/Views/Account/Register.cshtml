@model OnTime.Models.Viewmodels.Registerviewmodel


<div class="register-form mt-3 mb-3">
    <div class="container">
        <div class="row">
           
            <div class="col-md-6" style="background-color: #1d1919; opacity:0.5;">
                <form id="registration" method="post" asp-controller="Account" asp-action="Register" class="p-4 text-white">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="name"><i class="fa fa-user"></i> Name</label>
                        <input asp-for="Name" type="text" id="Name" class="form-control" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="fa fa-envelope"></i> Email</label>
                        <input asp-for="Email" type="text" id="Email" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="pwd"><i class="fa fa-lock"></i> Password</label>
                        <input asp-for="Password" id="Password" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="pwd"><i class="fa fa-lock"></i> Confirm Password</label>
                        <input asp-for="ConfirmPassword" id="ConfirmPassword" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="DOB">DOB(date):</label>
                        <input asp-for="DOB" type="date" id="DOB" name="DOB">
                    </div>
                    <div class="form-group">
                        <label for="HireDate">Hire Date:</label>
                        <input asp-for="HireDate" type="date" id="HireDate" name="HireDate">
                    </div>
                    <div class="form-group">
                        <label for="HireDate">Select Position:</label>
                        <select class="form-select" asp-for="Position" aria-label="Default select example">
                            <option selected>Select you position</option>
                            <option value="Cashier">Cashier</option>
                            <option value="Manager">Manager</option>
                            <option value="Shiftsupervisor">Shift Supervisor</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-outline-warning float-right">Register</button>
                </form>
                
                  
                
            </div>
        </div>
    </div>
</div>